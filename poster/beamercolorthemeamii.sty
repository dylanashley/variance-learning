% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{black}{RGB}{0, 0, 0}
\definecolor{blue}{RGB}{22, 87, 136}
\definecolor{gold}{RGB}{212, 186, 0}
\definecolor{maroon}{RGB}{100, 31, 69}
\definecolor{navy}{RGB}{0, 66, 80}
\definecolor{olive}{RGB}{199, 210, 138}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=blue}

% Headline
\setbeamercolor{headline}{fg=navy!3,bg=navy}
\setbeamercolor{headline rule}{bg=olive}

% Block
\setbeamercolor{block title}{fg=navy,bg=white}
\setbeamercolor{block separator}{bg=olive}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=navy,bg=navy!3}
\setbeamercolor{block alerted separator}{bg=olive}
\setbeamercolor{block alerted body}{fg=black,bg=navy!3}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=navy}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
